= form_for @applicant do |f|
  - if @applicant.errors.any?
    #error_explanation
      %h2= "#{pluralize(@applicant.errors.count, "error")} prohibited this applicant from being saved:"
      %ul
        - @applicant.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :firstname
    = f.text_field :firstname
  .field
    = f.label :lastname
    = f.text_field :lastname
  .field
    = f.label :telephone
    = f.text_field :telephone
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :landlord
    = f.text_field :landlord
  .field
    = f.label :landlordnum
    = f.text_field :landlordnum
  .field
    = f.label :employer
    = f.text_field :employer
  .field
    = f.label :employername
    = f.text_field :employername
  .field
    = f.label :employernum
    = f.text_field :employernum
  .field
    = f.label :income
    = f.text_field :income
  .actions
    = f.submit 'Save'
